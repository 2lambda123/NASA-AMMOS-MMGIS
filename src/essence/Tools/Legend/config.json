{
    "defaultIcon": "map-legend",
    "description": "Show a chart mapping colors and symbols to meaning.",
    "descriptionFull": {
        "title": "Show a chart legend that maps colors and symbols to meaning.",
        "example": {
            "displayOnStart": true,
            "justification": "right"
        }
    },
    "hasVars": true,
    "name": "Legend",
    "toolbarPriority": 2,
    "separatedTool": true,
    "paths": {
        "LegendTool": "essence/Tools/Legend/LegendTool"
    },
    "config": {
        "rows": [
            {
                "components": [
                    {
                        "field": "variables.displayOnStart",
                        "name": "Display on Start",
                        "description": "Whether the expanded legend should automatically be displayed on start.",
                        "type": "checkbox",
                        "width": 3,
                        "defaultChecked": false
                    },
                    {
                        "field": "variables.justification",
                        "name": "Justification",
                        "description": "",
                        "type": "dropdown",
                        "width": 2,
                        "options": ["left", "right"]
                    }
                ]
            }
        ]
    }
}
